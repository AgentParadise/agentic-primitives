{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentic-primitives.dev/schemas/prompt-meta.schema.json",
  "title": "Prompt Primitive Metadata Schema",
  "description": "Schema for prompt primitive metadata files (agents, commands, skills, meta-prompts)",
  "type": "object",
  "required": ["id", "kind", "category", "domain", "summary"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "minLength": 2,
      "maxLength": 64,
      "description": "Unique identifier in kebab-case (must match folder name and file base name)",
      "examples": ["python-pro", "code-reviewer", "async-patterns"]
    },
    "kind": {
      "type": "string",
      "enum": ["agent", "command", "skill", "meta-prompt"],
      "description": "Type of prompt primitive"
    },
    "category": {
      "type": "string",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "minLength": 2,
      "maxLength": 64,
      "description": "Category for organizing primitives (e.g., 'python', 'review', 'testing')",
      "examples": ["python", "javascript", "review", "refactor", "testing", "generation"]
    },
    "domain": {
      "type": "string",
      "minLength": 2,
      "maxLength": 128,
      "description": "Technical domain or expertise area",
      "examples": ["python", "web-development", "devops", "security", "meta"]
    },
    "summary": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Brief description of the primitive's purpose and capabilities"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$"
      },
      "uniqueItems": true,
      "description": "Keywords for searching and filtering",
      "examples": [["python", "backend", "architecture"], ["review", "security", "best-practices"]]
    },
    "defaults": {
      "type": "object",
      "additionalProperties": false,
      "description": "Default configuration for this primitive",
      "properties": {
        "preferred_models": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9-]+/[a-z0-9-]+$",
            "description": "Model reference in format 'provider/model' (e.g., 'claude/sonnet')"
          },
          "minItems": 1,
          "description": "Ordered list of recommended models (first is most preferred)",
          "examples": [["claude/sonnet", "openai/gpt-codex"]]
        },
        "temperature": {
          "type": "number",
          "minimum": 0,
          "maximum": 2,
          "description": "Default temperature for model sampling"
        },
        "max_tokens": {
          "type": "integer",
          "minimum": 1,
          "description": "Maximum tokens in response"
        }
      }
    },
    "context_usage": {
      "type": "object",
      "additionalProperties": false,
      "description": "How this prompt should be injected into conversation context",
      "properties": {
        "as_system": {
          "type": "boolean",
          "description": "Use as system message (for agents with persistent personality)",
          "default": false
        },
        "as_user": {
          "type": "boolean",
          "description": "Use as user message (for commands/tasks)",
          "default": false
        },
        "as_overlay": {
          "type": "boolean",
          "description": "Inject as context overlay (for skills)",
          "default": false
        }
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
        "description": "Tool ID (must exist in tools/ directory)"
      },
      "uniqueItems": true,
      "description": "List of tool IDs this primitive can use"
    },
    "inputs": {
      "type": "object",
      "additionalProperties": false,
      "description": "Expected input parameters for this primitive",
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type", "description"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^[a-z_][a-z0-9_]*$",
                "description": "Input parameter name in snake_case"
              },
              "type": {
                "type": "string",
                "enum": ["string", "number", "boolean", "object", "array"],
                "description": "Expected data type"
              },
              "description": {
                "type": "string",
                "minLength": 5,
                "description": "What this input is used for"
              }
            }
          }
        },
        "optional": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type", "description"],
            "additionalProperties": false,
            "properties": {
              "name": {
                "type": "string",
                "pattern": "^[a-z_][a-z0-9_]*$"
              },
              "type": {
                "type": "string",
                "enum": ["string", "number", "boolean", "object", "array"]
              },
              "description": {
                "type": "string",
                "minLength": 5
              },
              "default": {
                "description": "Default value if not provided"
              }
            }
          }
        }
      }
    },
    "versions": {
      "type": "array",
      "minItems": 1,
      "description": "Version registry for this primitive (REQUIRED for agents, commands, meta-prompts)",
      "items": {
        "type": "object",
        "required": ["version", "file", "status", "hash", "created", "notes"],
        "additionalProperties": false,
        "properties": {
          "version": {
            "type": "integer",
            "minimum": 1,
            "description": "Sequential version number starting at 1"
          },
          "file": {
            "type": "string",
            "pattern": "^[a-z0-9]+(-[a-z0-9]+)*\\.prompt\\.v[0-9]+\\.md$",
            "description": "Filename for this version (e.g., 'python-pro.prompt.v1.md')"
          },
          "status": {
            "type": "string",
            "enum": ["draft", "active", "deprecated", "archived"],
            "description": "Current lifecycle status of this version"
          },
          "hash": {
            "type": "string",
            "pattern": "^blake3:[a-f0-9]{64}$",
            "description": "BLAKE3 hash of file content (enforces immutability for non-draft versions)"
          },
          "created": {
            "type": "string",
            "format": "date",
            "description": "Date this version was created (YYYY-MM-DD)"
          },
          "deprecated": {
            "type": "string",
            "format": "date",
            "description": "Date this version was deprecated (YYYY-MM-DD, only for deprecated/archived status)"
          },
          "notes": {
            "type": "string",
            "minLength": 5,
            "maxLength": 500,
            "description": "Release notes or changes in this version"
          }
        }
      }
    },
    "default_version": {
      "type": "integer",
      "minimum": 1,
      "description": "Default version number to use (must match a version in versions array)"
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "kind": {
            "enum": ["agent", "command", "meta-prompt"]
          }
        }
      },
      "then": {
        "required": ["versions", "default_version"],
        "properties": {
          "versions": {
            "minItems": 1
          }
        }
      }
    }
  ],
  "examples": [
    {
      "id": "python-pro",
      "kind": "agent",
      "category": "python",
      "domain": "python",
      "summary": "Expert Python engineer for architecture and debugging",
      "tags": ["python", "backend", "architecture"],
      "defaults": {
        "preferred_models": ["claude/sonnet", "openai/gpt-codex"]
      },
      "context_usage": {
        "as_system": true
      },
      "tools": ["run-tests", "search-code"],
      "versions": [
        {
          "version": 1,
          "file": "python-pro.prompt.v1.md",
          "status": "active",
          "hash": "blake3:abc123def456789012345678901234567890123456789012345678901234abcd",
          "created": "2025-01-15",
          "notes": "Initial version with comprehensive Python expertise"
        }
      ],
      "default_version": 1
    },
    {
      "id": "code-review",
      "kind": "command",
      "category": "review",
      "domain": "software-engineering",
      "summary": "Perform thorough code review with security and performance analysis",
      "tags": ["review", "security", "performance"],
      "defaults": {
        "preferred_models": ["claude/sonnet"]
      },
      "context_usage": {
        "as_user": true
      },
      "inputs": {
        "required": [
          {
            "name": "file_path",
            "type": "string",
            "description": "Path to file or directory to review"
          }
        ],
        "optional": [
          {
            "name": "focus_areas",
            "type": "array",
            "description": "Specific areas to focus on (security, performance, etc.)",
            "default": ["all"]
          }
        ]
      },
      "versions": [
        {
          "version": 1,
          "file": "code-review.prompt.v1.md",
          "status": "active",
          "hash": "blake3:def456abc789012345678901234567890123456789012345678901234567efab",
          "created": "2025-02-01",
          "notes": "Initial code review command with security focus"
        }
      ],
      "default_version": 1
    },
    {
      "id": "async-patterns",
      "kind": "skill",
      "category": "testing",
      "domain": "python",
      "summary": "Best practices for async/await patterns in Python",
      "tags": ["async", "python", "patterns"],
      "context_usage": {
        "as_overlay": true
      }
    }
  ]
}

