{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://agentic-primitives.dev/schemas/command-frontmatter.v1.json",
  "title": "Command Frontmatter Schema",
  "description": "JSON Schema for v2 command primitive frontmatter validation",
  "type": "object",
  "required": ["description", "model"],
  "properties": {
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200,
      "description": "Brief description of what this command does (10-200 characters)"
    },
    "argument-hint": {
      "type": "string",
      "maxLength": 100,
      "description": "Optional hint for command arguments (e.g., '<file> [options]')"
    },
    "model": {
      "type": "string",
      "enum": ["haiku", "sonnet", "opus"],
      "description": "Default Claude model to use for this command"
    },
    "allowed-tools": {
      "type": "string",
      "pattern": "^[A-Za-z0-9_, ]+$",
      "description": "Comma-separated list of allowed tools (e.g., 'Read, Bash, Grep')"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9-]+$"
      },
      "uniqueItems": true,
      "description": "Optional tags for categorization (lowercase-with-dashes)"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version (optional, for tracking changes)"
    }
  },
  "additionalProperties": false,
  "examples": [
    {
      "description": "Review implementation against project plan and verify completeness",
      "argument-hint": "<path-to-project-plan.md>",
      "model": "sonnet",
      "allowed-tools": "Read, Grep, Glob, Bash"
    },
    {
      "description": "Create conventional commits with proper formatting",
      "argument-hint": "[type] [scope] [message] - or leave blank for interactive",
      "model": "sonnet",
      "allowed-tools": "Read, Bash",
      "tags": ["git", "commit", "devops"]
    }
  ]
}
