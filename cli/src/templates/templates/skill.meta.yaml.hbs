id: {{id}}
kind: skill
category: {{category}}
domain: {{#if domain}}{{domain}}{{else}}{{category}}{{/if}}
summary: "{{summary}}"
{{#if tags}}
tags:
{{#each tags}}
  - {{this}}
{{/each}}
{{/if}}

# Claude Code skill configuration
claude:
  name: {{id}}
  description: "{{summary}}"
  allowed_tools:
    - Read
    - Grep

defaults:
  preferred_models:
    - claude/sonnet

# Build targets
targets:
  claude: true
