id: {{tool_id}}
version: 1.0.0
name: {{name}}
description: {{description}}

interface:
  function:
    name: {{function_name}}
    description: {{description}}
    parameters:
      - name: input
        type: string
        description: Input data to process
        required: true
    returns:
      type: object
      description: Result of the operation

implementation:
  language: python
  runtime: python3.11+
  entry_point: impl.py:{{function_name}}
  requirements:
    - name: {{package_name}}
      version: "0.1.0"
      source: local

execution:
  timeout_seconds: 30
  max_retries: 3
  async: false

generator_hints:
  mcp:
    resource_subscriptions: []
  langchain:
    tool_type: structured
